{
  "name": "goof-world",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:server\"",
    "dev:next": "next dev",
    "dev:server": "tsx watch server/index.ts",
    "build": "next build",
    "build:server": "echo 'Server uses tsx, no build needed'",
    "start": "concurrently \"npm run start:next\" \"npm run start:server\"",
    "start:next": "next start",
    "start:server": "tsx server/index.ts",
    "lint": "next lint",
    "check": "yarn tsc --noEmit && yarn tsc -p tsconfig.server.json --noEmit",
    "clint": "yarn lint && yarn check",
    "verify-ci": "bash scripts/verify-ci.sh"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.4.2",
    "@chakra-ui/react": "^3.27.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "framer-motion": "^12.23.22",
    "jotai": "^2.15.0",
    "next": "^15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "^15.1.6",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
